{% extends "layouts/base.twig" %}
{% set pageName = 'Login' %}
{% set body_class = 'fullpage' %}

{% block header %}

  <div class="notice notice--top">
    <a href="" class="notice__link">Vaen√§gijale</a>
  </div>
  	
{% endblock %}


{% block content %}
 
  <section class="box">
  	<header class="box__header">
      <a href="" class="box__logo">
        <img src="assets/images/sib_logo.svg" alt="" class="box__logo-image">
      </a>
    </header>
    
    <div class="box__content">
      <h1 class="box__title">
        Sisenen Sotsiaalkindlustusameti iseteenindusse
      </h1>
      <ul class="accordion" aria-label="Accordion buttons">
        <li class="accordion__item">
          <button class="accordion__trigger" aria-controls="login-IDCard" aria-expanded="false">
            <img src="assets/images/idcard.png" alt="ID kaart" aria-hidden="true" class="accordion__image">
            Sisene ID-kaardiga
          </button>
          <div class="accordion__content" id="login-IDCard">
            <form action="">
              <label for="userID" class="form__label">
                <span class="u-visuallyhidden">Sinu isikukood</span>
                <input type="text" class="form__input" id="userID" placeholder="Sinu isikukood" pattern="[0-9]*">
              </label>
              <input type="submit" class="button" value="Sisenen">
            </form>
          </div>
        </li>
        <li class="accordion__item">
          <button class="accordion__trigger" aria-controls="login-mobileID" aria-expanded="false">
            <img src="assets/images/mobileid.png" alt="Mobiil ID" aria-hidden="true" class="accordion__image">
            Sisene Mobiil ID-ga
          </button>
          <div class="accordion__content" id="login-mobileID">
            <form action="">
              <label for="userID" class="form__label">
                <span class="u-visuallyhidden">Sinu isikukood</span>
                <input type="text" class="form__input" id="userID" placeholder="Sinu isikukood" pattern="[0-9]*">
              </label>
              
              <label for="userMobile" class="form__label visuallyhidden">
                <span class="u-visuallyhidden">Sinu telefoninumber</span>
                <input type="tel" class="form__input" id="userMobile" placeholder="Sinu telefoninumber">
              </label>
              <input type="submit" class="button" value="Sisenen">
            </form>
          </div>
        </li>
      </ul>
    </div>
    
    <footer class="box__footer">
      <div class="box__footer--left">
        <a href="" class="box__footer-link">Mis on iseteenindus?</a>
      </div>
      <div class="box__footer--right">
        <a href="" class="box__footer-link">ENG</a>
        <a href="" class="box__footer-link">RUS</a>
      </div>
    </footer>
  </section>
  
{% endblock %}



